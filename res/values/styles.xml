<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 页面 -->
    <style name="page" parent="@style/match_match_vertical">
        <item name="android:background">@color/page_background</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    
    <!-- 页面 - 正文 -->
    <style name="page_body" parent="@style/match_match_vertical">
    </style>
    
	<!-- 列表项 -->
	<style name="listItem" parent="@style/match_wrap">
	    <item name="android:minHeight">@dimen/listItem_minHeight</item>
	    <item name="android:paddingLeft">@dimen/padding_specialLarge</item>
	    <item name="android:paddingTop">@dimen/padding_default</item>
	    <item name="android:paddingRight">@dimen/padding_specialLarge</item>
	    <item name="android:paddingBottom">@dimen/padding_default</item>
	    <item name="android:gravity">center_vertical</item>
	</style>
	
	<!-- 宽充满 - 高充满 -->
    <style name="match_match">
       	<item name="android:layout_width">match_parent</item>
      	<item name="android:layout_height">match_parent</item>
    </style>
    
    <!-- 宽充满 - 高包括 -->
    <style name="match_wrap">
       	<item name="android:layout_width">match_parent</item>
      	<item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- 宽包括 - 高包括 -->
    <style name="wrap_wrap">
       	<item name="android:layout_width">wrap_content</item>
      	<item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- 宽包括 - 高充满 -->
    <style name="wrap_match">
       	<item name="android:layout_width">wrap_content</item>
      	<item name="android:layout_height">match_parent</item>
    </style>
    
    <!-- 宽充满 - 高充满 - 纵向 -->
    <style name="match_match_vertical">
       	<item name="android:layout_width">match_parent</item>
      	<item name="android:layout_height">match_parent</item>
      	<item name="android:orientation">vertical</item>
    </style>
    
    <!-- 宽充满 - 高包括 - 纵向 -->
    <style name="match_wrap_vertical">
       	<item name="android:layout_width">match_parent</item>
      	<item name="android:layout_height">wrap_content</item>
      	<item name="android:orientation">vertical</item>
    </style>
    
    <!-- 宽包括 - 高包括 - 纵向 -->
    <style name="wrap_wrap_vertical">
       	<item name="android:layout_width">wrap_content</item>
      	<item name="android:layout_height">wrap_content</item>
      	<item name="android:orientation">vertical</item>
    </style>
    
    <!-- 宽包括 - 高充满 - 纵向 -->
    <style name="wrap_match_vertical">
       	<item name="android:layout_width">wrap_content</item>
      	<item name="android:layout_height">match_parent</item>
      	<item name="android:orientation">vertical</item>
    </style>
    
    <!-- 宽权重 - 高包括 -->
    <style name="weight_wrap">
       	<item name="android:layout_width">0dp</item>
      	<item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
    </style>
    
    <!-- 宽权重 - 高包括 -->
    <style name="weight_match">
       	<item name="android:layout_width">0dp</item>
      	<item name="android:layout_height">match_parent</item>
	    <item name="android:layout_weight">1</item>
    </style>
    
    <!-- 宽权重 - 高包括 - 纵向 -->
    <style name="weight_wrap_vertical">
       	<item name="android:layout_width">0dp</item>
      	<item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
      	<item name="android:orientation">vertical</item>
    </style>
    
    <!-- 宽权重 - 高充满 - 纵向 -->
    <style name="weight_match_vertical">
       	<item name="android:layout_width">0dp</item>
      	<item name="android:layout_height">match_parent</item>
	    <item name="android:layout_weight">1</item>
      	<item name="android:orientation">vertical</item>
    </style>
    
    <!-- 宽包括 - 高权重 -->
    <style name="wrap_weight">
       	<item name="android:layout_width">wrap_content</item>
      	<item name="android:layout_height">0dp</item>
	    <item name="android:layout_weight">1</item>
    </style>
    
    <!-- 宽充满 - 高权重 -->
    <style name="match_weight">
       	<item name="android:layout_width">match_parent</item>
      	<item name="android:layout_height">0dp</item>
	    <item name="android:layout_weight">1</item>
    </style>
    
    <!-- 宽包括 - 高权重 - 纵向 -->
    <style name="wrap_weight_vertical">
       	<item name="android:layout_width">wrap_content</item>
      	<item name="android:layout_height">0dp</item>
	    <item name="android:layout_weight">1</item>
      	<item name="android:orientation">vertical</item>
    </style>
    
    <!-- 宽充满 - 高权重 - 纵向 -->
    <style name="match_weight_vertical">
       	<item name="android:layout_width">match_parent</item>
      	<item name="android:layout_height">0dp</item>
	    <item name="android:layout_weight">1</item>
      	<item name="android:orientation">vertical</item>
    </style>
</resources>
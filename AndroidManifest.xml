<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.xiaopan.easynetwork.android"
    android:versionCode="103"
    android:versionName="1.0.3" >

    <!-- 声明兼容的系统版本 -->
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17" />
    
    <!-- 声明要使用的权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- 声明应用需要的各种组件 -->
    <application android:name="test.MyApplication" android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme" >
        <activity android:name="test.activity.MainActivity" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="test.activity.ImageLoaderTestActivity" android:label="@string/activityTitle_imageLoader"/>
        <activity android:name="test.activity.HttpTestActivity" android:label="@string/activityTitle_http"/>
    </application>
</manifest>